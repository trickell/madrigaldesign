	{
		parent::Controller();
		
		//$this->output->enable_profiler(TRUE);
	}
	
	function index()
	{
		// DATA FOR THE PAGE
		$data['title'] = "Welcome To MadrigalDesign.com : Website Developer : Website Designer : Website Solution";
